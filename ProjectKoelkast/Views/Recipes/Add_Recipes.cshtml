                @Html.ValidationMessageFor(model => model.Tijd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Voedingswaarden, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Voedingswaarden, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @required = "true" } })
                @Html.ValidationMessageFor(model => model.Voedingswaarden, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row" >
            @Html.LabelFor(model => model.Product.Name, "Ingrediënten", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">

                <select class="form-control" id="ddlCategories" name="ProductId" required>
                    <option value="0">Please Select</option>
                    @foreach (Product p in products)
                    {

                        <option value="@p.Id" required="true">@p.Name</option>

                    }
                </select>
                
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Bereidwijze, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Bereidwijze, new { style = "width: 10000px", htmlAttributes = new { @class = "form-control", @autocomplete = "off", @required = "true" } })
                @Html.ValidationMessageFor(model => model.Bereidwijze, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.ImageUrl, "Foto", htmlAttributes: new { @class = "col-form-label col-md-2" })

            <table class="form-group row">
                <tr class="col-md-10">
                    <td class="col-md-10" style="width:60px;height:50px"><input class="col-md-10" type="file" name="file" id="file" style="width: 500px;" /></td>
                </tr>
            </table>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

