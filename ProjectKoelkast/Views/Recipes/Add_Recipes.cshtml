                @Html.EditorFor(model => model.Keuken, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @required = "true" } })
                @Html.ValidationMessageFor(model => model.Keuken, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Gang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("gang", new SelectList(Enum.GetValues(typeof(Course))), "Gang", new { @class = "form-control", @required = "true" })
                @Html.ValidationMessageFor(model => model.Gang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.AantalPersonen, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
