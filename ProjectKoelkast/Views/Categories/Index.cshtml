@model IEnumerable<ProjectKoelkast.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-link" }) @:|
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-link" }) @:|
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-link" })
                }
            }

        </td>
    </tr>
}

</table>
